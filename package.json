{
  "name": "mindline",
  "version": "1.0.0",
  "description": "Scalable full-stack productivity suite with Next.js 15, tRPC, and PostgreSQL",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm db:generate && pnpm -r build",
    "start": "pnpm --filter mindline-web exec next start -p $PORT",
    "start:standalone": "node apps/web/.next/standalone/server.js",
    "migrate": "pnpm --filter mindline-web exec prisma migrate dev --name init",
    "db:push": "pnpm --filter mindline-web exec prisma db push",
    "db:generate": "pnpm --filter mindline-web exec prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc -b",
    "prepare": "husky install",
    "clean": "pnpm clean:deps && pnpm clean:build",
    "clean:deps": "rm -rf node_modules apps/*/node_modules packages/*/node_modules pnpm-lock.yaml",
    "clean:build": "rm -rf apps/*/.next apps/*/dist packages/*/dist .turbo",
    "fresh-install": "pnpm clean && pnpm install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@testing-library/jest-dom": "^6.6.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-next": "^14.0.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}
